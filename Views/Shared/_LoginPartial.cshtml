@using Microsoft.AspNetCore.Identity
@using TeknolojiHaber.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-danger" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Merhaba ><span class="text-white font-weight-bold">[ @UserManager.GetUserName(User)! ]</span></a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-white">Çıkış Yap</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link d-inline p-1 text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Kayıt Ol </a>
    </li>
    <li class="nav-item">
        <a class="nav-link d-inline p-1 text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
    </li>
}
</ul>

@model List<AppUser>

<div class="jumbatron mt-2" style="background-color:white;">
<h1 class="text-primary">Tüm Kullanıcılar</h1>

<a asp-action="Create" class="btn btn-outline-success my-3">Kullanıcı Ekle</a>

<table class="table table-hover">
    <thead>
        <th>E-Posta</th>
        <th>Açıklama</th>
        <th>Kullanici İşlemleri</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.Kullanici_Aciklama</td>
                <td><a class="fas fa-trash-alt d-inline p-2 bg-danger text-white" asp-action="Delete" asp-route-id="@item.Id"> Sil</a>
                <a class="fas fa-align-justify d-inline p-2 bg-warning text-white" asp-action="KullanicininRolleri" asp-route-id="@item.Id"> Rolleri</a></td>
            </tr>
        }

    </tbody>
</table>
</div>